<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="client" class="ua.study.spring.beans.Client">
        <constructor-arg value="1"/>
        <constructor-arg value="Ivan"/>
    </bean>

    <bean id="eventLogger" class="ua.study.spring.logger.ConsoleEventLogger"/>

    <bean id="application" class="ua.study.spring.Application">
        <constructor-arg ref="client"/>
        <constructor-arg ref="eventLogger"/>
    </bean>

    <bean id="fileEventLogger" class="ua.study.spring.logger.FileEventLogger" init-method="init">
        <constructor-arg value="/Users/ivan/Documents/projects/springCource/src/main/resources/log.txt"/>
    </bean>

    <bean id="event" class="ua.study.spring.beans.Event" scope="prototype">
        <constructor-arg>
            <bean class = "java.util.Date"/>
        </constructor-arg>
        <constructor-arg>
            <bean class="java.text.DateFormat" factory-method="getDateTimeInstance"/>
        </constructor-arg>
    </bean>

</beans>